<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {estilo: 'todoslosproductos' }) %>

  <body>
    <!-- Header -->
    <%- include('../partials/header') %>
      <!-- /nav-bar -->
      <%- include('../partials/nav-bar') %>
        <%-include ('../partials/button-top')%>
          <!-- todos los productos -->
          <div class="div-body">
            <div>
              <h2 class="products-title">Ofertas</h2>
            </div>
            <div class="todos-los-productos">
              <section>
                <% productos.forEach(product=>{%>
                  <a class="card-ejs" href="/products/detail/<%= product.id %>">
                    <figure class="">
                      <img src="/images/products/<%= product.imagen  %>" alt="imagen de producto" />
                    </figure>
                    <article class="product-ejs">
                      <h2>
                        <%= product.nombre %>
                      </h2><br>
                      <h3>$ <%= product.precio %>
                      </h3><br>
                      <i class="fas fa-truck"></i>
                    </article>
                  </a>
                  <%})%>
              </section><br>
            </div>
          </div>
          <%- include('../partials/footer') %>
            <% if (successMessage && successMessage.length> 0) { %>
              <script>
                Swal.fire({
                  title: 'Producto eliminado',
                  text: '<%= successMessage %>',
                  icon: 'success',
                  confirmButtonText: 'Aceptar'
                });
              </script>

              <% } %>
  </body>

</html>