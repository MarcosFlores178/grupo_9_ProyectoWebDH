<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <%- include('../partials/head', {estilo: 'todoslosproductos'}) %>
  <body>
    <!-- Header -->
    <%- include('../partials/header') %>
    <!-- /nav-bar -->
    <%- include('../partials/nav-bar') %>
    <%-include ('../partials/button-top')%>
    <!-- todos los productos -->
    <div class="div-body">
      <div>
        <h2 class="products-title">Todos los productos</h2>
      </div>
      <div class="todos-los-productos">
        <section>
          <% productos.forEach(product=>{%>
          <a href="/products/detail/<%= product.id %>">
            <figure class="">
              <img
                src="/images/products/<%= product.image  %>"
                alt="imagen de producto"
              />
            </figure>
            <article class="">
              <h2><%= product.name %></h2><br>
              <h3>$ <%= product.price %></h3><br>
              <i class="fas fa-truck"></i>
            </article>
          </a>
          <%})%>
        </section><br>
      </div>
    </div>
    <!-- /todos los productos -->

    <!-- footer -->
    <!-- /footer -->
  </body>
  <%- include('../partials/footer') %>
</html>
