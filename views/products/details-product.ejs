<!DOCTYPE html>
<html lang="es">
<%-include ('../partials/head.ejs', {estilo:'detailsproduct'})%>

    <body>
        <%-include ('../partials/header')%>
            <%-include ('../partials/nav-bar')%>
                <main>
                    <%-include ('../partials/button-top')%>
                        <nav class="detail-product">
                            <h2>Detalle del producto</h2>
                            <nav>
                                <h3>
                                    <%= producto.nombre %>
                                </h3>
                                <section>
                                    <img src="/images/products/<%= producto.imagen%>" alt="" width="250px">
                                </section>
                            </nav>
                            <nav>
                                <section>
                                    <div>
                                        <div class="description-div">
                                            <h4>Descripci√≥n:</h4>
                                            <%= producto.descripcion %>
                                        </div>
                                    </div>
                                    <div class="description-div">
                                        <h4>Marca: </h4>
                                        <%= producto.marca %>
                                    </div>
                                    <div class="description-div">
                                        <h4>Talla: </h4>
                                        <%= producto.talle %>
                                    </div>
                                    <div class="description-div">
                                        <h4>Color: </h4>
                                        <%= producto.color %>
                                    </div>
                                    <div class="description-div">
                                        <h4>Precio: </h4>$<%=producto.precio%>
                                    </div>
                                    <% if (usuario.admincomp) { %>
                                        <div class="botones">
                                            <a href="/products/editproduct/<%= producto.id %>"><button
                                                    class="boton-editar">Editar</button></a>
                                            <form class="boton-eliminar" method="POST"
                                                action="/products/detail/<%= producto.id %>?_method=DELETE"
                                                style="display:inline;">
                                                <button class="boton-eliminar" type="submit">Eliminar</button>
                                            </form>
                                        </div>
                                        <%}%>


                                </section>
                            </nav>
                        </nav>
                </main>
                <%-include ('../partials/footer')%>
    </body>

</html>