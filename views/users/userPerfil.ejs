<html lang="es">
<%- include('../partials/head.ejs', {estilo:'userPerfil'})%>

    <body>
        <%-include ('../partials/header.ejs')%>
        <%-include ('../partials/nav-bar.ejs')%>
            <%-include ('../partials/button-top.ejs')%>
                <main class="perfil-usuario">
                    <div class="saludo">
                        <img class="foto-perfil" src="/images/users/<%= usuario.foto_perfil%>" alt="">
                        <h1>Hola <%=usuario.nombre%>!!!</h1>
                    </div>
                    <div class="todos-datos">
                        <section class="container-datos">
                            <h2>TUS DATOS PERSONALES</h2>
                            <div class="datos">
                                <h4 class="atributo">
                                    Nombre:
                                </h4>
                                <h4 class="valor">
                                    <%=usuario.nombre%>
                                </h4>
                                <h4 class="atributo">
                                Apellido:
                                </h4>
                                <h4 class="valor">
                                    <%=usuario.apellido%>
                                </h4>
                                <h4 class="atributo">
                                DNI:
                                </h4>
                                <h4 class="valor">
                                    <%=usuario.dni%>
                                </h4>
                                <h4 class="atributo">
                                Tel√©fono:
                                </h4>
                                <h4 class="valor">
                                    <%=usuario.telefono%>
                                </h4>
                                <h4 class="atributo">
                                Domicilio:
                                </h4>
                                <h4 class="valor">
                                    <%=usuario.domicilio%>
                                </h4>
                                <h4 class="atributo">
                                Pais:
                                </h4>
                                <h4 class="valor">
                                    <%=usuario.pais%>
                                </h4>
                                <h4 class="atributo">
                                Genero:
                                </h4>
                                <h4 class="valor">
                                    <%=usuario.genero%>
                                </h4>
                            </div>
                            <a href="editar-perfil">Editar datos personales</a>
                        </section>
                        <section class="container-datos">
                            <h2>TUS DATOS DE USUARIO</h2>
                            <div class="datos">

                                <h4 class="atributo">
                                    Nombre de usuario:
                                </h4>
                                <h4 class="valor">
                                    <%=usuario.nombre_usuario%>
                                </h4>

                                <h4>
                                    <h4 class="atributo">
                                        Tipo de usuario:
                                    </h4>
                                    <h4 class="valor">
                                        <%=usuario.tipo_usuario%>
                                    </h4>
                                </h4>
                                <h4>
                                    <%= 'EMAIL: ' + usuario.email%>
                                </h4>
                            </div>
                            <a href="editar-cuenta">Editar datos de usuario</a>

                        </section>
                    </div>
                </main>
                <%-include ('../partials/footer.ejs')%>
    </body>

</html>